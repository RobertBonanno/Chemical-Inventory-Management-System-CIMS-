@model LMS4Carroll.Models.Cage

@{
    ViewData["Title"] = "Add | Cage";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Create Cage</div>
    <div class="panel-body">
        <br />
        <form asp-action="Create">
            <div class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CageDesignation" class="col-md-2 control-label required"></label>
                    <div class="col-md-10">
                        <input asp-for="CageDesignation" name="DesignationString" class="form-control" value="@ViewData["Designation"]" />
                        <span asp-validation-for="CageDesignation" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="LocationID" class="col-md-2 control-label required"></label>
                    <div class="col-md-10">
                        <select asp-for="LocationID" name="LocationInput" class="form-control" asp-items="ViewBag.LocationName" value="@ViewData["Location"]"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Species" class="col-md-2 control-label required"></label>
                    <div class="col-md-10">
                        <input asp-for="Species" name="SpeciesString" class="form-control" value="@ViewData["Species"]" />
                        <span asp-validation-for="Species" class="text-danger" />
                    </div>
                </div>
                <div class="form-group" id="createbtn">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                    <div class="col-md-offset-2 col-md-10">
                        <a asp-action="Index" class="btn btn-danger">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
