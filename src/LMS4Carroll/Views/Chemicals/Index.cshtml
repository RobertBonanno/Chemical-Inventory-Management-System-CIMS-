@model IEnumerable<LMS4Carroll.Models.Chemical>

@{
    ViewData["Title"] = "List | Chemicals";
}

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Chemicals</div>
    <div class="panel-body table-responsive">
        <div class="btn-group">
            @if (User.IsInRole("Admin") || User.IsInRole("ChemUser") || User.IsInRole("BiologyUser"))
        {
            <a id="createRoleModal" asp-action="Create" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i>  Add Chemical
            </a>
    }
        </div><br />
        <form asp-controller="Chemicals" asp-action="Index">
            <div class="form-actions no-color">
                <p>
                    <input type="text" name="ChemString" value="@ViewData["currentFilter"]" id="SearchString"/>
                    <input type="submit" value="Search" class="btn btn-default" />
                    <a asp-action="Index" class="btn btn-default">Back to Full List</a>
                </p>
            </div>
        </form>

        <script src="//code.jquery.com/jquery-1.11.0.min.js"></script>
        <script src="//webrtc.github.io/adapter/adapter-latest.js" type="text/javascript"></script>
        <script src="~/js/quagga.min.js" type="text/javascript"></script>
        <script src="~/js/live_w_locator.js" type="text/javascript"></script>
        <script name="toggleBarcode">
            function toggleBarcode() {
                var x = document.getElementById("BarcodeScanner");
                if (x.style.display === "none") {
                    x.style.display = "block";
                    document.getElementById("Stop").click();
                } else {
                    x.style.display = "none";
                    document.getElementById("Start").click();
                }
            }
        </script>
        <button name="BarcodeToggle" onclick="toggleBarcode()">Toggle Barcode</button>
        <div id="BarcodeScanner" style="display: none;">
            <div class="controls">
                <fieldset class="input-group">
                    <button class="stop" id="Start">Stop</button>
                    <button class="start" id="Stop">Start</button>
                </fieldset>
                <fieldset class="reader-config-group">
                    <label>
                        <span>Barcode-Type</span>
                        <select name="decoder_readers">
                            <option value="code_128" selected="selected">Code 128</option>
                            <option value="code_39">Code 39</option>
                            <option value="code_39_vin">Code 39 VIN</option>
                            <option value="ean">EAN</option>
                            <option value="ean_extended">EAN-extended</option>
                            <option value="ean_8">EAN-8</option>
                            <option value="upc">UPC</option>
                            <option value="upc_e">UPC-E</option>
                            <option value="codabar">Codabar</option>
                            <option value="i2of5">I2of5</option>
                            <option value="2of5">Standard 2 of 5</option>
                            <option value="code_93">Code 93</option>
                        </select>
                    </label>
                    <label>
                        <span>Resolution (long side)</span>
                        <select name="input-stream_constraints">
                            <option value="320x240">320px</option>
                            <option selected="selected" value="640x480">640px</option>
                            <option value="800x600">800px</option>
                            <option value="1280x720">1280px</option>
                            <option value="1600x960">1600px</option>
                            <option value="1920x1080">1920px</option>
                        </select>
                    </label>
                    <label>
                        <span>Patch-Size</span>
                        <select name="locator_patch-size">
                            <option value="x-small">x-small</option>
                            <option value="small">small</option>
                            <option selected="selected" value="medium">medium</option>
                            <option value="large">large</option>
                            <option value="x-large">x-large</option>
                        </select>
                    </label>
                    <label>
                        <span>Half-Sample</span>
                        <input type="checkbox" checked="checked" name="locator_half-sample" />
                    </label>
                    <label>
                        <span>Workers</span>
                        <select name="numOfWorkers">
                            <option value="0">0</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option selected="selected" value="4">4</option>
                            <option value="8">8</option>
                        </select>
                    </label>
                    <label>
                        <span>Camera</span>
                        <select name="input-stream_constraints" id="deviceSelection"></select>
                    </label>
                    <label style="display: none">
                        <span>Zoom</span>
                        <select name="settings_zoom"></select>
                    </label>
                    <label style="display: none">
                        <span>Torch</span>
                        <input type="checkbox" name="settings_torch" />
                    </label>
                </fieldset>
            </div>
            <div id="result_strip">
                <ul class="thumbnails"></ul>
            </div>
            <div id="interactive" class="viewport"></div>
        </div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ChemID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CAS)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Formula)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FormulaName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FormulaWeight)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hazard)
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.SDS)
                    </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.State)
                    </th>
                    @if (User.IsInRole("Admin") || User.IsInRole("ChemUser") || User.IsInRole("BiologyUser"))
                {
                    <th>
                        Actions
                    </th>
            }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ChemID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CAS)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Formula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormulaName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormulaWeight)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Hazard)
                    </td>
                    @*<td>
                        <a id="viewbtn" asp-action="Details" asp-route-id="@item.ChemInventoryId" class="btn btn-info loc2">
                            <i class="glyphicon glyphicon-eye-open"></i>  Veiw
                        </a>
                    </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    @if (User.IsInRole("Admin") || User.IsInRole("ChemUser") || User.IsInRole("BiologyUser"))
                {
                    <td>
                        <a id="editbtn" asp-action="Edit" asp-route-id="@item.ChemID" class="btn btn-info">
                            <i class="glyphicon glyphicon-pencil"></i>  Edit
                        </a>
                        @if (User.IsInRole("Admin"))
                    {
                        <a id="deletebtn" asp-action="Delete" asp-route-id="@item.ChemID" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i>  Delete
                        </a>
                }
                        <a id="detailsbtn" asp-action="Details" asp-route-id="@item.ChemID" class="btn btn-info loc3">
                            <i class="glyphicon glyphicon-search"></i>  Details
                        </a>
                    </td>
            }
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
